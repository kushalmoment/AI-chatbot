{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/$1"
    }
  ],
  "env": {
    "GEMINI_API_KEY": "@gemini_api_key",
    "FIREBASE_KEY_JSON": "@firebase_key_json",
    "FIREBASE_PROJECT_ID": "@firebase_project_id",
    "GENERATIVE_MODEL": "gemini-2.5-flash"
  }
}
